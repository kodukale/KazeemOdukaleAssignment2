<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OdukaleCondominiumActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            style="@style/mainHeader"
            android:text="@string/condominium"
            android:textSize="@dimen/middleSize"
            android:layout_marginTop="@dimen/paddings"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/imageSize"
                android:layout_height="@dimen/imageSize"
                android:layout_marginLeft="@dimen/paddings"
                android:src="@drawable/image4"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/paddings">

                <TextView
                    style="@style/apartmentDetails"
                    android:text="@string/condominiumString1Addr"
                    />
                <TextView
                    style="@style/apartmentDetails"
                    android:text="@string/condominiumString1Desc"
                    />
                <TextView
                    style="@style/apartmentDetails"
                    android:text="@string/condominiumString1Price"
                    />
            </LinearLayout>

            <CheckBox
                android:id="@+id/odukaleCondominiumCheckBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/paddings"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/imageSize"
                android:layout_height="@dimen/imageSize"
                android:layout_marginLeft="@dimen/paddings"
                android:src="@drawable/image2"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/paddings">

                <TextView
                    style="@style/apartmentDetails"
                    android:text="@string/condominiumString2Addr"
                    />
                <TextView
                    style="@style/apartmentDetails"
                    android:text="@string/condominiumString2Desc"
                    />
                <TextView
                    style="@style/apartmentDetails"
                    android:text="@string/condominiumString2Price"
                    />
            </LinearLayout>

            <CheckBox
                android:id="@+id/odukaleCondominiumCheckBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/paddings"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/imageSize"
                android:layout_height="@dimen/imageSize"
                android:layout_marginLeft="@dimen/paddings"
                android:src="@drawable/image6"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/paddings">

                <TextView
                    style="@style/apartmentDetails"
                    android:text="@string/condominiumString3Addr"
                    />
                <TextView
                    style="@style/apartmentDetails"
                    android:text="@string/condominiumString3Desc"
                    />
                <TextView
                    style="@style/apartmentDetails"
                    android:text="@string/condominiumString3Price"
                    />
            </LinearLayout>

            <CheckBox
                android:id="@+id/odukaleCondominiumCheckBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/paddings"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/imageSize"
                android:layout_height="@dimen/imageSize"
                android:layout_marginLeft="@dimen/paddings"
                android:src="@drawable/image8"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/paddings">

                <TextView
                    style="@style/apartmentDetails"
                    android:text="@string/condominiumString4Addr"
                    />
                <TextView
                    style="@style/apartmentDetails"
                    android:text="@string/condominiumString4Desc"
                    />
                <TextView
                    style="@style/apartmentDetails"
                    android:text="@string/condominiumString4Price"
                    />
            </LinearLayout>

            <CheckBox
                android:id="@+id/odukaleCondominiumCheckBox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/paddings"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/imageSize"
                android:layout_height="@dimen/imageSize"
                android:layout_marginLeft="@dimen/paddings"
                android:src="@drawable/image10"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/paddings">

                <TextView
                    style="@style/apartmentDetails"
                    android:text="@string/condominiumString5Addr"
                    />
                <TextView
                    style="@style/apartmentDetails"
                    android:text="@string/condominiumString5Desc"
                    />
                <TextView
                    style="@style/apartmentDetails"
                    android:text="@string/condominiumString5Price"
                    />
            </LinearLayout>

            <CheckBox
                android:id="@+id/odukaleCondominiumCheckBox5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/paddings"/>

        </LinearLayout>

        <Button
            style="@style/enterButton"
            android:text="@string/nextButton"
            android:id="@+id/odukaleCondominiumNextButton"
            />

    </LinearLayout>

</ScrollView>