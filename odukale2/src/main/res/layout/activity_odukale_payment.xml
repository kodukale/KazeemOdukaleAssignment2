<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OdukalePaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            style="@style/mainHeader"
            android:text="@string/cust_information"
            android:textSize="@dimen/mainHeaderTextSize"
            android:layout_marginTop="@dimen/margins"
            android:layout_marginBottom="@dimen/margins"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <EditText
                    android:id="@+id/OdukaleFullname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/fullname"
                    android:inputType="textPersonName"
                    android:layout_weight="6"
                    />
            </TableRow>

            <TableRow>
                <EditText
                    android:id="@+id/OdukaleCardNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/cardNumber"
                    android:inputType="number"
                    android:layout_weight="5"
                    />
            </TableRow>

            <TableRow>
                <EditText
                    android:id="@+id/OdukaleCCV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/ccv"
                    android:inputType="number"
                    android:layout_weight="5"
                    />
            </TableRow>
            <TableRow>
                <TextView/>
            </TableRow>

            <TableRow>
                <Spinner
                    android:id="@+id/OdukaleFavoriteSport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:entries="@array/favoriteSport"
                    />
            </TableRow>

            <TableRow>
                <TextView/>
            </TableRow>

            <TableRow>
                <Spinner
                    android:id="@+id/OdukaleFavoriteFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:entries="@array/favoriteFood"
                    />
            </TableRow>

        </TableLayout>

        <Button
            style="@style/enterButton"
            android:text="Submit"
            android:id="@+id/odukalePaymentSubmitButton"
            android:layout_marginTop="@dimen/margins"
            />

    </LinearLayout>

</ScrollView>